<LoginScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'background.jpg'  # Make sure to have this image in the same directory

    FloatLayout:
        Label:
            text: "Welcome Back"
            font_size: '32sp'
            bold: True
            color: 1, 1, 1, 1
            size_hint: None, None
            size: self.texture_size
            pos_hint: {"center_x": 0.5, "top": 0.95}

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.8, 0.5
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            spacing: dp(15)

            TextInput:
                hint_text: "Username"
                multiline: False
                padding: [15, 15, 15, 15]
                background_normal: ''
                background_color: 1, 1, 1, 0.9
                foreground_color: 0, 0, 0, 1
                size_hint_y: None
                height: dp(45)

            TextInput:
                hint_text: "Password"
                multiline: False
                password: True
                padding: [15, 15, 15, 15]
                background_normal: ''
                background_color: 1, 1, 1, 0.9
                foreground_color: 0, 0, 0, 1
                size_hint_y: None
                height: dp(45)

            Button:
                text: "Login"
                background_color: 0.2, 0.6, 0.86, 1
                color: 1, 1, 1, 1
                size_hint_y: None
                height: dp(45)
                background_normal: ''
                canvas.before:
                    Color:
                        rgba: 0.2, 0.6, 0.86, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]

            Label:
                text: "Forgot password?"
                font_size: '12sp'
                color: 1, 1, 1, 0.8
                halign: 'right'
